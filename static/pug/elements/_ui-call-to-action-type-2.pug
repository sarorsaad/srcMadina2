//- title - title of element
//- btnClass - button class
//- iconClass - class of icon inside button
//- btnText - button text
//- bgElement - background of element
mixin call-to-action-type-2(title, btnHref, btnClass, iconClass, iconAlign, btnText, bgElement, desc)
  // Call to action type 2
  - var bgElement = bgElement || "bg-blue-gray"
  - var btnText = btnText || "By intense now"

  section.section-66(class= bgElement).context-dark
    .container
      .row.align-items-sm-center.no-gutters
        .col-lg-8.col-xl-9.text-center.text-lg-left
          h2
            span.big= title
          if desc != null
            p= desc
        .col-lg-4.col-xl-3.offset-top-41.offset-md-top-0
          if iconClass != null
            a.btn.btn-icon(href=btnHref, class= btnClass + " "+"btn-icon-"+ iconAlign)
              span.icon(class= iconClass)
              = btnText
          else
            a.btn(href=btnHref, class=btnClass)=btnText
