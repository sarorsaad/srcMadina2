//- thumbnail - {thumbnail} object
mixin thumbnail-josip(options)
  -var photoswipe = (typeof(options.target.href) !== 'undefined') ? {"href": options.target.href} : {"data-photo-swipe-item": "", "data-size": ""+options.target.width+"x"+options.target.height, "href": options.target.src}

  // Thumbnail Josip
  figure.thumbnail-josip(class= options.styleClass)
    a&attributes(photoswipe)
      img(width=options.thumb.width, height=options.thumb.height, src=options.thumb.src, alt=options.thumb.alt)
    div.thumbnail-desc
      h5.thumbnail-josip-title.text-medium.text-white= options.title
      p.d-none.d-lg-block.font-italic.text-white.offset-top-0= options.description
    figcaption
      a.btn.btn-block.btn-rect.text-center.text-lg-left(href= options.btnLink class= options.btnClass)= options.btnText




