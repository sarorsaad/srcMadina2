//- Subscribe Form Widget
//- holder - input placeholder
//- id - id of form output element
//- external - true if form output element is an external element
mixin widget-form-subscribe-type-2
	form.rd-mailform( data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
		.form-wrap.input-group.input-group-custom.input-group-sm.no-wrap
			label.form-label(for="subscribe-form-email") Your e-mail...
			input.form-input.mr-2(id="subscribe-form-email" type="email" name="email" data-constraints="@Email @Required")
			button(type="submit").btn.btn-sm.btn-darkest Subscribe


