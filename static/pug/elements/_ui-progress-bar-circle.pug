//- Circle progress bar
	@param {object} data
	@param {string} data.title
	@param {number} data.value
mixin progress-circle( data )
	//Circle progress bar
	.progress-circle&attributes( attributes )
		.progress-circle-block
			svg.progress-circle-bar( x='0', y='0', width='118', height='118', viewbox='0 0 118 118' )
				circle.progress-circle-bg( cx=59, cy=59, r=54 )
				circle.progress-circle-fg.clipped( cx=59, cy=59, r=54 )
			.progress-circle-counter= data.value
		if (data.title)
			p.progress-circle-title= data.title
