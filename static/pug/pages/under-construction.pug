extends  ../_skeleton
//- Includes
include ../elements/_ui-breadcrumb-classic
include  ../elements/_ui-timers

//-Title
block variables
	- pageName = 'Under Construction'
//- Page
block page

	section.section.section-single.bg-accent
		.section-single-inner
			.section-single-header: .container
				+logo

			.section-single-main: .container
				h2 We're getting ready to launch in
				.divider-small

				.countdown.single-page-countdown(data-countdown='data-countdown' data-to='2022-02-20')
					.countdown-block.countdown-block-days
						svg.countdown-circle(x='0' y='0' width='200' height='200' viewbox='0 0 200 200' data-progress-days='')
							circle.countdown-circle-bg(cx='100' cy='100' r='90')
							circle.countdown-circle-fg.clipped(cx='100' cy='100' r='90')
						.countdown-wrap
							.countdown-counter(data-counter-days='') 00
							.countdown-title days
					.countdown-block.countdown-block-hours
						svg.countdown-circle(x='0' y='0' width='200' height='200' viewbox='0 0 200 200' data-progress-hours='')
							circle.countdown-circle-bg(cx='100' cy='100' r='90')
							circle.countdown-circle-fg.clipped(cx='100' cy='100' r='90')
						.countdown-wrap
							.countdown-counter(data-counter-hours='') 00
							.countdown-title hours
					.countdown-block.countdown-block-minutes
						svg.countdown-circle(x='0' y='0' width='200' height='200' viewbox='0 0 200 200' data-progress-minutes='')
							circle.countdown-circle-bg(cx='100' cy='100' r='90')
							circle.countdown-circle-fg.clipped(cx='100' cy='100' r='90')
						.countdown-wrap
							.countdown-counter(data-counter-minutes='') 00
							.countdown-title minutes
					.countdown-block.countdown-block-seconds
						svg.countdown-circle(x='0' y='0' width='200' height='200' viewbox='0 0 200 200' data-progress-seconds='')
							circle.countdown-circle-bg(cx='100' cy='100' r='90')
							circle.countdown-circle-fg.clipped(cx='100' cy='100' r='90')
						.countdown-wrap
							.countdown-counter(data-counter-seconds='') 00
							.countdown-title seconds

				.block-sm
					p.text-left(style='max-width: 600px;'): span Our website is under construction, we are working very hard to give you the best experience on our new web site.
					p.text-left Stay ready, we`re launching soon

					form.rd-form.rd-mailform.rd-form-inline( data-form-output='form-output-global' data-form-type='subscribe' method='post' action='bat/rd-mailform.php' )
						.form-wrap
							input.form-input#subscribe-form-email( type='email' name='email' data-constraints='@Email @Required' )
							label.form-label( for='subscribe-form-email' ) Enter your E-mail
						.form-button
							button.btn.btn-specific( type='submit' ) Notify Me

			.section-single-footer: .container
				+rights