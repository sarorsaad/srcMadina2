extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumb-classic
include  ../elements/_ui-box-icon-type-4

//-Title
block variables
	- pageName = 'Maintenance'

//- Page
block page

	section.section.section-single.bg-accent
		.section-single-inner
			.section-single-header: .container
				+logo

			.section-single-main: .container
				h2.text-uppercase WEBSITE IS IN MAINTENANCE MODE
				.divider-small

				.block-sm
					p.text-left(style='max-width: 600px;'): span Our website is currently under maintenance. We are preparing our website to give you the best user experience you can have on our website. If you want to be notified when we will be back online, please enter your e-mail in the form below. We are always happy to help you.

					form.rd-form.rd-mailform.rd-form-inline( data-form-output='form-output-global' data-form-type='subscribe' method='post' action='bat/rd-mailform.php' )
						.form-wrap
							input.form-input#subscribe-form-email( type='email' name='email' data-constraints='@Email @Required' )
							label.form-label( for='subscribe-form-email' ) Enter your E-mail
						.form-button
							button.btn.btn-specific( type='submit' ) Notify Me

			.section-single-footer: .container
				+rights